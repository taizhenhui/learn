
<view>
  <view class="login_card">
    <view class="title_sty">登录</view>
    <view class="username_sty fl">
      <text>用户名:</text>
      <input type="text" maxlength="10" placeholder="请输入用户名" model:value="{{username}}"/>
    </view>
    <view class="password_sty fl">
      <text>密码:</text>
      <input type="password" maxlength="12" model:value="{{password}}" placeholder="请输入密码"/>
    </view>
    <view class="password_sty fl">
      <text>确认密码:</text>
      <input type="password" maxlength="12" model:value="{{definedPassword}}" placeholder="请输入密码"/>
    </view>
    <button type="primary" bindtap="login">注册</button>
  </view>
</view>
