.login_card{
  width: 90%;
  padding: 20rpx;
  box-sizing: border-box;
  margin: 100px auto 0;
  /* background-color: ; */
  box-shadow: 1px 1px 7px 2px #eee;
}
.title_sty{
  width: 100%;
  /* height: 60px; */
  line-height: 60px;
  font-size: 20px;
  font-weight: 600;
  text-align: center;
}
.login_card button{
  width: 100%;
}
.fl{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.username_sty,
.password_sty{
  margin-bottom: 20px;
}
.username_sty text,
.password_sty text{
  width: 80px;
  text-align: end;
}
.username_sty input,
.password_sty input{
  flex: 1;
  box-sizing: border-box;
  height: 32px;
  border: 1px solid #666;
  border-radius: 10rpx;
  padding: 0 15rpx;
  margin-left: 20rpx;

}
